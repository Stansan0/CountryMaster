<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

        <!-- Estado "pressed" (presionado) -->
        <item android:state_pressed="true">
            <shape>
                <solid android:color="#3700B3" /> <!-- Color cuando se presiona -->
                <corners android:radius="20dp" /> <!-- Radio de las esquinas -->
            </shape>
        </item>
        <!-- Estado por defecto -->
        <item>
            <shape>
                <solid android:color="@color/mi_color_boton" /> <!-- Color normal -->
                <corners android:radius="20dp" /> <!-- Radio de las esquinas -->
            </shape>
        </item>
    </selector>
